---
export interface Props {
    title: string;
    description?: string;
    keywords?: string;
}

const {
    title,
    description = "Harsy Law - Firma Hukum Profesional di Jakarta. Konsultasi hukum perdata, pidana, keluarga, bisnis, ketenagakerjaan, dan PTUN. Hubungi kami untuk pendampingan hukum terpercaya.",
    keywords = "pengacara jakarta, konsultan hukum, firma hukum, advokat, hukum perdata, hukum pidana, perceraian, hukum bisnis, PTUN, Harsy Law",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content="Harsy Law Firm" />
        <meta name="robots" content="index, follow" />
        <meta
            name="google-site-verification"
            content="i9ker4FKvZeWWuVUBHxxjcc1DLYOEQK5cl-3SnaBvu4"
        />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://harsylaw.vercel.app/logo.png"
        />
        <meta property="og:locale" content="id_ID" />
        <meta property="og:site_name" content="Harsy Law Firm" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta
            property="twitter:image"
            content="https://harsylaw.vercel.app/logo.png"
        />

        <!-- Favicon -->
        <link rel="icon" type="image/png" href="/logo.png" />
        <link rel="apple-touch-icon" href="/logo.png" />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,600;0,700;1,600&family=Inter:wght@300;400;500;600&display=swap"
            rel="stylesheet"
        />
    </head>
    <body class="bg-white font-inter text-slate-800 overflow-x-hidden">
        <slot />
    </body>
</html>

<style is:global>
    :root {
        --navy: #0f172a;
        --gold: #c5a059;
    }

    .font-inter {
        font-family: "Inter", sans-serif;
    }

    .serif-title {
        font-family: "Cormorant Garamond", serif;
        letter-spacing: 0.02em;
    }

    .navy-bg {
        background-color: var(--navy);
    }

    .gold-text {
        color: var(--gold);
    }

    .gold-bg {
        background-color: var(--gold);
    }

    html {
        scroll-behavior: smooth;
    }

    /* Animations */
    .reveal {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .reveal.active {
        opacity: 1;
        transform: translateY(0);
    }

    .hover-card {
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(15, 23, 42, 0.1);
    }

    .hero-gradient {
        background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    }

    .legal-pattern {
        background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23c5a059' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }
</style>
